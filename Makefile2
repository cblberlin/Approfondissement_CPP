INCLDIR := include
OBJDIR := obj
SRCDIR := src
BINDIR := bin

CC := g++
CXXFLAGS:= -Wall -std=c++11 -I$(INCLDIR)

EXEC = main tests_unitaire

all: $(EXEC)

main: main.cpp
	$(CC) -o $@ $^ $(CXXFLAGS)

	



